@page
@model ApproveExpensesModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }
    .container {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }
    .card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        padding: 30px;
        margin-bottom: 20px;
    }
    .header {
        background: linear-gradient(90deg, #4A5568 0%, #2D3748 100%);
        color: white;
        padding: 20px 30px;
        border-radius: 12px 12px 0 0;
        font-size: 28px;
        font-weight: bold;
        margin: -30px -30px 20px -30px;
    }
    .error-bar {
        background: #FED7D7;
        border: 2px solid #FC8181;
        color: #742A2A;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-weight: 500;
    }
    .filter-box {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }
    .filter-box label {
        font-weight: 600;
        font-size: 18px;
    }
    .filter-box input {
        flex: 1;
        padding: 10px 15px;
        border: 2px solid #E2E8F0;
        border-radius: 8px;
        font-size: 16px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th {
        background: #F7FAFC;
        padding: 15px;
        text-align: left;
        font-weight: 600;
        font-size: 16px;
        border-bottom: 2px solid #E2E8F0;
    }
    td {
        padding: 15px;
        border-bottom: 1px solid #E2E8F0;
    }
    .btn {
        background: linear-gradient(90deg, #48BB78 0%, #38A169 100%);
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s;
    }
    .btn:hover {
        transform: translateY(-2px);
    }
    .btn-approve {
        background: linear-gradient(90deg, #48BB78 0%, #38A169 100%);
    }
    .nav-links {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
    }
    .nav-links a {
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        background: rgba(255,255,255,0.2);
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
    }
    .nav-links a:hover {
        background: rgba(255,255,255,0.3);
    }
</style>

<div class="container">
    <div class="nav-links">
        <a href="/Index">View Expenses</a>
        <a href="/AddExpense">Add Expense</a>
        <a href="/ApproveExpenses">Approve Expenses</a>
        <a href="/swagger">API Documentation</a>
    </div>
    
    <div class="card">
        <div class="header">Approve Expenses</div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-bar">
                <strong>⚠️ Error:</strong> @Model.ErrorMessage
            </div>
        }
        
        <div style="margin-bottom: 15px; font-size: 18px; font-weight: 600;">
            Pending expenses:
        </div>
        
        <form method="get">
            <div class="filter-box">
                <label>Filter:</label>
                <input type="text" name="filter" value="@Model.Filter" placeholder="Search by category or user..." />
            </div>
        </form>
        
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PendingExpenses.Count == 0)
                {
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 30px; color: #A0AEC0;">
                            No pending expenses to approve
                        </td>
                    </tr>
                }
                @foreach (var expense in Model.PendingExpenses)
                {
                    <tr>
                        <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                        <td>@expense.CategoryName</td>
                        <td>£@expense.Amount.ToString("N2")</td>
                        <td>
                            <form method="post" style="display: inline;">
                                <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                <button type="submit" class="btn btn-approve">Approve</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>